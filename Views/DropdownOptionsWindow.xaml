<Window x:Class="JouleadAssistantDesign.Views.DropdownOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑下拉菜单选项"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="请输入下拉菜单选项（每行一个选项，最多10个）："
                   FontSize="14" FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- 选项编辑区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

                    <!-- 左侧：文本编辑 -->
        <StackPanel Grid.Column="0" Margin="0,0,8,0">
            <TextBlock Text="选项列表：" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBox x:Name="OptionsTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="12"
                     Height="300"
                     TextChanged="OptionsTextBox_TextChanged"/>
        </StackPanel>

            <!-- 中间：操作按钮 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                <Button Content="添加默认选项" 
                        Width="120" Height="30" Margin="4"
                        Click="AddDefaultOptions_Click"/>
                <Button Content="清空选项" 
                        Width="120" Height="30" Margin="4"
                        Click="ClearOptions_Click"/>
            </StackPanel>

            <!-- 右侧：预览 -->
            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                <TextBlock Text="预览：" FontWeight="Bold" Margin="0,0,0,4"/>
                <ComboBox x:Name="PreviewComboBox"
                          Height="30" Margin="0,0,0,8"
                          IsEditable="True"/>
                <TextBlock Text="当前选项数量：0/10" 
                           x:Name="OptionsCountText"
                           FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <!-- 启用下拉菜单选项 -->
        <CheckBox Grid.Row="2" 
                  x:Name="EnableDropdownCheckBox"
                  Content="启用下拉菜单模式"
                  FontSize="14" FontWeight="Bold"
                  Margin="0,8,0,8"
                  IsChecked="True"/>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,8,0,0">
            <Button Content="取消" 
                    Width="75" Height="30" Margin="4"
                    IsCancel="True"/>
            <Button Content="确定" 
                    Width="75" Height="30" Margin="4"
                    IsDefault="True"
                    Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
