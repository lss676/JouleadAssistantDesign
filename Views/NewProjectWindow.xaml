<Window x:Class="JouleadAssistantDesign.Views.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新建项目" Height="220" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="16" VerticalAlignment="Center">
        <TextBlock Text="项目名称：" />
        <TextBox x:Name="TxtName" Margin="0,4,0,10"/>

        <TextBlock Text="项目经理：" />
        <TextBox x:Name="TxtManager" Margin="0,4,0,10"/>

        <TextBlock Text="交接日期（可选）：" />
        <DatePicker x:Name="DpHandover" Margin="0,4,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="取消" Width="70" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="确定" Width="70" IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
